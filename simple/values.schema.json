{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "description": "Number of replicas to deploy",
      "default": 1
    },
    "image": {
      "type": "string",
      "description": "Container image registry URL",
      "examples": ["quay.io/myorg/myapp:latest"]
    },
    "imagePullPolicy": {
      "type": "string",
      "description": "Kubernetes image pull policy",
      "enum": ["Always", "Never", "IfNotPresent"],
      "default": "IfNotPresent"
    },
    "hostname": {
      "type": "string",
      "description": "Fully qualified domain name for route exposure",
      "examples": ["myapp.example.com"]
    },
    "scc": {
      "type": "string",
      "description": "SecurityContextConstraints (OpenShift)",
      "examples": ["anyuid"]
    },
    "ports": {
      "type": "string",
      "description": "Port to expose"
    },
    "env": {
      "type": "string",
      "description": "Environment variables"
    },
    "storage": {
      "type": ["string", "object"],
      "description": "Persistent storage configuration"
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean"
        },
        "automount": {
          "type": "boolean"
        },
        "annotations": {
          "type": "object"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "podAnnotations": {
      "type": "object"
    },
    "podLabels": {
      "type": "object"
    },
    "podSecurityContext": {
      "type": "object"
    },
    "securityContext": {
      "type": "object"
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
        }
      }
    },
    "route": {
      "type": "object",
      "properties": {
        "targetPort": {
          "type": ["string", "integer"]
        }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "limits": {
          "type": "object"
        },
        "requests": {
          "type": "object"
        }
      }
    },
    "livenessProbe": {
      "type": "object"
    },
    "readinessProbe": {
      "type": "object"
    },
    "volumes": {
      "type": "array"
    },
    "volumeMounts": {
      "type": "array"
    },
    "nodeSelector": {
      "type": "object"
    },
    "tolerations": {
      "type": "array"
    },
    "affinity": {
      "type": "object"
    }
  },
  "required": ["image"]
}
